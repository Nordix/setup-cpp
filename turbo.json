{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["OS", "RUNNER_OS"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint.tsc": {
      "dependsOn": ["build", "^lint.tsc"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint.eslint": {
      "dependsOn": ["build", "^lint.eslint"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "lint": {
      "dependsOn": ["lint.tsc", "lint.eslint"]
    }
  },
  "ui": "stream"
}
